<% if @message && @message.errors.any? %>
  <div>
    <strong> Some issues with your form, please fix them: </strong>
    <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<form method="post" action="/messages">
  <div>
    <label for="author">Author:</label>
    <input type="text" id="author" name="author" value="<%= @message && @message.author %>">
  </div>
  <div>
    <label for="subject">Subject:</label>
    <input type="text" id="subject" name="title" value="<%= @message && @message.title %>">
  </div>
  <div>
    <label for="content">Content:</label>
    <input type="text" id="content" name="content" value="<%= @message && @message.content %>">
  </div>
  <footer>
    <button type="submit">Submit Author</button>
  </footer>  
</form>